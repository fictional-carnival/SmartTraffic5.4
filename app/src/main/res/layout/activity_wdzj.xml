<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/list_tab_toolbar"
        layout="@layout/toolbar_main"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/border_bottom"
            android:layout_above="@+id/ll_bottom"
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/ll_content1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_car_1"
                        android:layout_marginRight="100dp"
                        android:background="#0f0"
                        android:layout_width="300dp"
                        android:layout_height="200dp" >
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_1"
                                android:layout_margin="15dp"
                                android:textSize="30dp"
                                android:text="1号小车"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_2"
                                android:textSize="30dp"
                                android:layout_margin="15dp"
                                android:text="正常"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout
                            >
                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:text="1000"
                                android:id="@+id/tv_3"
                                android:background="@drawable/border_elipse_white"
                                android:textSize="25dp"
                                android:layout_width="90dp"
                                android:layout_height="90dp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_car_2"

                        android:background="#0f0"
                        android:layout_width="300dp"
                        android:layout_height="200dp" >
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_4"
                                android:layout_margin="15dp"
                                android:textSize="30dp"
                                android:text="2号小车"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_5"
                                android:textSize="30dp"
                                android:layout_margin="15dp"
                                android:text="正常"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout
                            >
                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:text="1000"
                                android:id="@+id/tv_6"
                                android:background="@drawable/border_elipse_white"
                                android:textSize="25dp"
                                android:layout_width="90dp"
                                android:layout_height="90dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/ll_car_3"

                        android:layout_marginRight="100dp"
                        android:background="#0f0"
                        android:layout_width="300dp"
                        android:layout_height="200dp" >
                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_7"
                                android:layout_margin="15dp"
                                android:textSize="30dp"
                                android:text="3号小车"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_8"
                                android:textSize="30dp"
                                android:layout_margin="15dp"
                                android:text="正常"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout
                            >
                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:text="1000"
                                android:id="@+id/tv_9"
                                android:background="@drawable/border_elipse_white"
                                android:textSize="25dp"
                                android:layout_width="90dp"
                                android:layout_height="90dp" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_car_4"

                        android:background="#0f0"
                        android:layout_width="300dp"
                        android:layout_height="200dp" >

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/tv_10"
                                android:layout_margin="15dp"
                                android:textSize="30dp"
                                android:text="4号小车"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_11"
                                android:textSize="30dp"
                                android:layout_margin="15dp"
                                android:text="正常"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout
                            >
                        <LinearLayout
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:gravity="center"
                                android:text="1000"
                                android:id="@+id/tv_12"
                                android:background="@drawable/border_elipse_white"
                                android:textSize="25dp"
                                android:layout_width="90dp"
                                android:layout_height="90dp" />

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_content2"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textSize="35dp"
                    android:layout_margin="30dp"
                    android:textStyle="bold"
                    android:text="远程控制："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:gravity="center"
                        android:background="#ccc"
                        android:layout_marginLeft="200dp"
                        android:textSize="30dp"
                        android:text="小车编号"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="center"
                        android:background="#ccc"
                        android:layout_marginLeft="600dp"
                        android:textSize="30dp"
                        android:text="远程控制"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="70dp"
                    android:background="@drawable/border_bottom"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView

                        android:layout_marginLeft="260dp"
                        android:padding="5dp"
                        android:textSize="35dp"
                        android:text="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginLeft="700dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/border"
                            android:layout_width="200dp"
                            android:layout_height="40dp">

                            <TextView
                                android:id="@+id/tv_wd_1"
                                android:background="#0f0"
                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="启动"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                            <TextView
                                android:id="@+id/tv_wd_2"

                                android:textSize="25dp"
                                android:gravity="center"
                                android:text="停止"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_bottom"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView

                        android:layout_marginLeft="260dp"
                        android:padding="5dp"
                        android:textSize="35dp"
                        android:text="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="700dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:layout_width="200dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_wd_3"
                            android:background="#0f0"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="启动"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_wd_4"

                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="停止"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_bottom"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView

                        android:layout_marginLeft="260dp"
                        android:padding="5dp"
                        android:textSize="35dp"
                        android:text="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="700dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:layout_width="200dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_wd_5"
                            android:background="#0f0"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="启动"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_wd_6"

                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="停止"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_bottom"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView

                        android:layout_marginLeft="260dp"
                        android:padding="5dp"
                        android:textSize="35dp"
                        android:text="4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="700dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border"
                        android:layout_width="200dp"
                        android:layout_height="40dp">

                        <TextView
                            android:id="@+id/tv_wd_7"
                            android:background="#0f0"
                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="启动"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <TextView
                            android:id="@+id/tv_wd_8"

                            android:textSize="25dp"
                            android:gravity="center"
                            android:text="停止"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_content3"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:textSize="35dp"
                    android:layout_margin="30dp"
                    android:textStyle="bold"
                    android:text="充值记录："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="100dp"
                        android:gravity="center"
                        android:background="#ccc"
                        android:textSize="25dp"
                        android:text="序号"
                        android:layout_width="100dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="100dp"
                        android:gravity="center"
                        android:background="#ccc"
                        android:textSize="25dp"
                        android:text="小车编号"
                        android:layout_width="140dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="100dp"
                        android:gravity="center"
                        android:background="#ccc"
                        android:textSize="25dp"
                        android:text="充值金额（元）"
                        android:layout_width="180dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:layout_marginLeft="100dp"
                        android:gravity="center"
                        android:background="#ccc"
                        android:textSize="25dp"
                        android:text="充值金额"
                        android:layout_width="245dp"
                        android:layout_height="40dp" />
                </LinearLayout>

                <ListView
                    android:id="@+id/lv_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/ll_bottom"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:textStyle="bold"
                android:layout_marginRight="150dp"
                android:id="@+id/tv_tab_1"
                android:textSize="35dp"
                android:text="我的余额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginRight="150dp"
                android:id="@+id/tv_tab_2"
                android:textSize="35dp"
                android:text="远程控制"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView

                android:id="@+id/tv_tab_3"
                android:textSize="35dp"
                android:text="充值记录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>



</LinearLayout>